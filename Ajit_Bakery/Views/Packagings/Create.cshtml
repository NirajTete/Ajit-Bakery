    <script>
                // Function to fetch and display cake details in the modal
        function loadCakeDetails(outletName) {
            if (!outletName) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: "Please select an outlet!",
                    timer: 5000
                });
                $("#cakeListModal").modal("hide");
                return;
            }

            $("#selectedOutlet").text(outletName); // Update modal title

            $.ajax({
                url: "/Packagings/GetCakeList", // API endpoint
                type: "GET",
                data: { outletName: outletName },
                success: function (response) {
                    if (response.success) {
                        console.log("API Response:", response);

                        var tableBody = $("#cakeTable tbody");

                        $.each(response.data, function (index, cake) {
                            var row = `<tr>
                                <td>${cake.productName}</td>
                                                <td class="text-center">${cake.remainingQty}</td>
                                </tr>`;
                            tableBody.append(row);
                        });

                        $("#cakeTable").DataTable({
                            destroy: true,  // Ensure it reinitializes properly
                            paging: true,   // Enable pagination
                            searching: true, // Enable search
                            ordering: false, // Disable sorting
                            lengthChange: false, // Disable "Show X entries" dropdown
                            pageLength: 10
                        });

                        // Ensure modal is shown with fresh data
                        $("#cakeListModal").modal("show");


                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: 'No Data',
                            text: "No cakes found for this outlet.",
                            timer: 5000
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: "Error fetching data!",
                        timer: 5000
                    });
                }
            });
        }

        // Bind function to button click
        $("#viewDetailsBtn").click(function () {
            var selectedOutlet = $("#Outlet_Name").val();

            // Show the modal immediately to prevent flickering effect
            $("#cakeListModal").modal("show");

            // Load data
            loadCakeDetails(selectedOutlet);
        });
    </script>

