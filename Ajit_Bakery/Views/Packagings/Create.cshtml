            });

            // Move focus to ScanItem when a box is selected
            $('#Box_No').on('change', function () {
                setTimeout(function () {
                    $('#ScanItem').focus();
                }, 100); // short delay ensures select2 doesn't steal back focus
            });

            $("#Packaging").submit(function (event) {
                event.preventDefault(); // Prevent default form submission

                Swal.fire({
