@using System.Security.Claims;
@{
    var userName = User.Identity.Name.ToUpper();
    var userRole = User.FindFirstValue(ClaimTypes.Role);
    var unitNameClaim = ViewBag.UnitName;
    var plantNameClaim = ViewBag.PlantName;
}
<!-- [ Header Topbar ] start -->
<header class="pc-header bg-brand-color-13">
    <div class="m-header">
        <a href="/Home/Index" class="b-brand text-primary">
            <img src="~/assets/images/logo.svg" alt="logo image" class="logo-lg" style="width: 265% !important; margin-left: -5rem !important;" />
        </a>
    </div>
    <div class="header-wrapper">
