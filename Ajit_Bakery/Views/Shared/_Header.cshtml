                       aria-haspopup="false" data-bs-auto-close="outside" aria-expanded="false">
                        <i class="fa fa-bell text-white"></i>

                        @if (ViewBag.productionListgetBadge != null && ViewBag.productionListgetBadge.ToString() != "0")
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @ViewBag.productionListgetBadge
                            </span>
                        }
                    </a>
                </li>

                <li class="dropdown pc-h-item header-user-profile">
                    <a class="dropdown-toggle arrow-none me-0 text-decoration-none" data-bs-toggle="dropdown" href="#" role="button"
                       aria-haspopup="false" data-bs-auto-close="outside" aria-expanded="false">
                        <span class="fw-bold text-white">Hello, @userName</span>
                        <img src="~/assets/images/user/avatar-2.jpg" style="margin-left:5px;" alt="user-image" class="user-avtar" />
                    </a>
