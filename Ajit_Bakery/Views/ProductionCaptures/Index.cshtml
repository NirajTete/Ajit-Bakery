        $('.save-btn').click(function () {
            var row = $(this).closest('tr');
            var updatedData = [];

            row.find('.outlet-cell').each(function () {
                var input = $(this).find('.outlet-input');
                var outletName = $(this).data('outlet');
                var oldValue = parseFloat(input.attr('min'));
                var newValue = parseFloat(input.val());

                if (newValue !== oldValue) {
                    updatedData.push({
                        ProductId: row.find('td:first').text().trim(), // Assuming first td is Production_Id
                        ProductName: row.find('td:eq(1)').text().trim(), // 2nd column ProductName
                        Outlet: outletName,
                        OldQty: oldValue,
                        NewQty: newValue
                    });
                }
            });

            if (updatedData.length > 0) {
                // Call AJAX
                $.ajax({
                    url: '/ProductionCaptures/UpdateProduction',
                    type: 'POST',
                    data: JSON.stringify(updatedData),
                    contentType: 'application/json; charset=utf-8',
                    success: function (response) {
                        // Swal.fire('Success', 'Production quantities updated!', 'success');
                        Swal.fire('Success', 'Production quantities updated!', 'success')
                            .then(() => {
                                location.reload(); // Reload the page after user closes the success alert
                            });
                    },
                    error: function (xhr) {
                        Swal.fire('Error', 'Failed to update!', 'error');
                    }
                });
            } else {
                Swal.fire('Info', 'No changes detected!', 'info');
            }
        });

    </script>

