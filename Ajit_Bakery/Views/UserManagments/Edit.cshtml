@model Ajit_Bakery.Models.UserManagment
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card">
    <div class="card-header bg-dark text-white py-2">
        <div class="d-flex align-items-baseline">
            <a asp-action="Index" asp-controller="Home" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
            <h4 class="mx-auto text-white text-2xl font-semibold"> User Management Page</h4>
            @*  <a asp-action="CreateUser" class="btn btn-success btn-sm text-white">
                <i class="fas fa-plus-square"></i> Add User
            </a> *@
        </div>
    </div>
    <div class="card-body mt-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label fw-bold small"><b>Username</b></label>
                        <input asp-for="UserName" class="form-control text-lowercase" style=" width: 480px;" readonly />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Role" class="control-label fw-bold small"><b>Role</b></label>
                        <select asp-for="Role" id="role" asp-items="@ViewBag.role" onchange="role()" class="form-control" style="width: 480px;"></select>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="PageName" class="control-label fw-bold small"><b>Page Access</b></label>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="PageName" class="control-label fw-bold small"><b>Admin</b></label>
                        <select id="demo" multiple class="form-control selectdrop" asp-for="selectedpages" asp-items="@ViewBag.MainMenu" name="mainmenu" multiselect-select-all="true">
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="PageName" class="control-label fw-bold small"><b>Masters</b></label>
                        <select id="demo1" multiple class="form-control selectdrop" asp-for="selectedpages" asp-items="@ViewBag.SubMenu" name="submenu" multiselect-select-all="true">
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="PageName" class="control-label fw-bold small"><b>Operation</b></label>
                        <select id="demo2" multiple class="form-control selectdrop" asp-for="selectedpages" asp-items="@ViewBag.OprationMenu" name="oprationmenu" multiselect-select-all="true">
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="PageName" class="control-label fw-bold small"><b>Reprint</b></label>
                        <select id="demo4" multiple class="form-control selectdrop" asp-items="@ViewBag.WmarketingMenu" asp-for="selectedpages" name="marketingmenu" multiselect-select-all="true">
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="PageName" class="control-label fw-bold small"><b>Report</b></label>
                        <select id="demo3" multiple class="form-control selectdrop" asp-for="selectedpages" asp-items="@ViewBag.reportmenu" name="reportmenu" multiselect-select-all="true">
                        </select>
                    </div>
                </div>

            </div>

            <br />
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm col-md-12" />
                </div>
            </div>
            <br />

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {


