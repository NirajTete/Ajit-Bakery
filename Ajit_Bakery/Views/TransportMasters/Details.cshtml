@model Ajit_Bakery.Models.TransportMaster

@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid">
    <div class="card shadow-sm mt-3">
        <div class="card-header bg-dark text-white py-2">

            <div class="d-flex align-items-baseline">
                <a asp-action="Index" asp-controller="TransportMasters" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold"> Transport Master - Detailes</h5>
            </div>
        </div>
        <div class="card-body p-5">

            <dl class="row">
                <dt class="col-sm-2">
                    Driver Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DriverName)
                </dd>
                <dt class="col-sm-2">
                    Driver Contact No.
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DriverContactNo)
                </dd>
                <dt class="col-sm-2">
                    Vehicle No.
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VehicleNo)
                </dd>
                <dt class="col-sm-2">
                    Vehicle Own
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VehicleOwn)
                </dd>
                <dt class="col-sm-2">
                    Create Date
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>
               
                <dt class="col-sm-2">
                    Modified Date
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ModifiedDate)
                </dd>
               
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User)
                </dd>
            </dl>
        </div>
    </div>
</div>






