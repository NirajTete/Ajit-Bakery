@model Ajit_Bakery.Models.OutletMaster

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="card shadow-sm mt-3">
        <div class="card-header bg-dark text-white py-2">

            <div class="d-flex align-items-baseline">
                <a asp-action="Index" asp-controller="OutletMasters" class="btn btn-link text-white"><i class="fa fa-arrow-left"></i></a>
                <h5 class="mx-auto text-white text-2xl font-semibold"> Outlet Master - Add</h5>
            </div>
        </div>
        <div class="card-body p-2">
            <form asp-action="Create" id="productForm" onsubmit="return validateForm()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-sm-2">
                        <label asp-for="OutletCode" class="control-label"></label>
                        <input type="text" asp-for="OutletCode" id="OutletCode" value="@ViewBag.outletcode" class="form-control" readonly required />
                        <span asp-validation-for="OutletCode" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-5">
                        <label asp-for="OutletName" class="control-label">Outlet Name</label>
                        <input type="text" asp-for="OutletName"  class="form-control" required />
                    </div>
                    <div class="form-group col-sm-5">
                        <label asp-for="OutletContactPerson" class="control-label">Outlet Contact Person</label>
                        <input type="text" asp-for="OutletContactPerson" class="form-control" required />
                    </div>
                    <div class="form-group col-sm-3">
                        <label asp-for="OutletContactNo" class="control-label">Box Contact No.</label>
                        <input type="text" asp-for="OutletContactNo" id="OutletContactNo" class="form-control"
                               maxlength="10" pattern="[0-9]{10}" title="Enter exactly 10 digits" required />
                        <span asp-validation-for="OutletContactNo" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-9">
                        <label asp-for="OutletAddress" class="control-label">Outlet Address</label>
                        <input type="text" asp-for="OutletAddress" class="form-control" required />
                    </div>
                </div>
                <div class="row mb-3 p-2">
                    <div class="form-group col-sm-12 ">
                        <input type="submit" value="Save" class="btn btn-primary btn-sm col-md-12" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        
        $(document).ready(function () {
            $("#productForm").submit(function (event) {
                event.preventDefault(); // Prevent default form submission

                var formData = $(this).serialize(); // Serialize form data
                console.log("formData : " + formData);
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Create", "OutletMasters")", // Replace with your controller name
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: response.message,
                                confirmButtonText: "OK"
                            }).then(() => {
                                window.location.href = "@Url.Action("Index", "OutletMasters")"; // Redirect to Index
                            });
                            $("#productForm")[0].reset(); // Reset form after success
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: response.message
                            });
                            return;
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'Something went wrong! Please try again.'
                        });
                    }
                });
            });
        });

        function validateForm() {
            let isValid = true;
            let fields = document.querySelectorAll(".required-field");

            for (let field of fields) {
                if (field.value.trim() === "") {
                    alert("Please fill out all required fields.");
                    field.focus(); // Focus on the first empty field
                    return false; // Prevent form submission
                }
            }
            return true; // Allow form submission if all fields are filled
        }

    </script>
}

    